{
  "manifest_version": 3,
  "name": "Gmail Glass",
  "version": "1.1.0",
  "description": "Transform Gmail with beautiful glassmorphism effects - frosted glass panels, vibrant colors, and modern design",
  "permissions": [],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "css": ["styles.css"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["https://mail.google.com/*"]
    }
  ]
}

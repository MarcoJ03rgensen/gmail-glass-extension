{
  "manifest_version": 3,
  "name": "Gmail Glass",
  "version": "1.0.0",
  "description": "Transform Gmail with beautiful glassmorphism effects - frosted glass panels, vibrant colors, and modern design",
  "permissions": [],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
